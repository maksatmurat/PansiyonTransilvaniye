@model IEnumerable<PansiyonTransilvaniye.Models.Services>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Servisler</h2>

<p>
    @Html.ActionLink("Servis Ekle", "Create",null, new { @class = " btn btn-primary", @style = "background-color:#2fee50" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceOzellik)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceAdi)
        </td>
        <td>
            @Html.Raw(item.ServiceOzellik)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.Id }, new { @class = " btn btn-primary", @style = "background-color:#2fee50" }) 
            @Html.ActionLink("Sil", "Delete", new { id=item.Id }, new { @class = " btn btn-primary", @style = "background-color:#2fee50" })
        </td>
    </tr>
}

</table>
