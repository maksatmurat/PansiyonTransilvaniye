@model IEnumerable<PansiyonTransilvaniye.Models.IletisimBilgileri>
@if (Session["Id"] == null)
{
    Response.Redirect("~/Login/Loged");
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-7 col-sm-4">
        <h2>İletişim Bilgileri</h2>
    </div>
    <div class="col-lg-3 col-sm-3">
        @foreach (var item in Model)
        {
            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = " btn btn-primary", @style = "background-color:#2fee50" })
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <table class="table">
            <tr>
                <th>
                    <h4>  Telefon Numara:</h4>
                </th>
                <th>
                    <h4>  Email:</h4>
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.Raw(item.telNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-12 col-sm-12">
        <table class="table">
            <tr>
                <th>
                    <h4> İl:</h4>
                </th>
                <th>
                    <h4>  İlçe:</h4>
                </th>
                <th>
                    <h4>  Mahalle:</h4>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Il)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ilce)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mah)
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-lg-12">
        <h4> Açık Adres:</h4>


        <p>
            @foreach (var item in Model)
            {

                @Html.Raw(item.AcikAdres)

            }
        </p>
    </div>


</div>