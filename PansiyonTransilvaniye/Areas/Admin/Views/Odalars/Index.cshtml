@model IEnumerable<PansiyonTransilvaniye.Models.Odalar>
@if (Session["Id"] == null)
{
    Response.Redirect("~/Login/Loged");
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Odalar</h2>

<p>
    @Html.ActionLink("Oda Ekle", "Create", null, new { @class = " btn btn-primary", @style = "background-color:#2fee50" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OdaUcreti)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OdaAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OdaOzellikleri)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OdaResimleri)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OdaUcreti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OdaAdi)
            </td>
            <td>
                @Html.Raw(item.OdaOzellikleri)
            </td>
            <td>
                @Html.Raw("<img style='width:100px; height:100px;' src=\"data:image/jpeg;base64,"
                                     + Convert.ToBase64String(item.OdaResimleri) + "\" />")
            </td>
            <td>
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = " btn btn-primary", @style = "background-color:#2fee50" })
            </td>
        </tr>
    }

</table>
