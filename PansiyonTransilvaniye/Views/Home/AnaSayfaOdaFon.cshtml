@model IEnumerable<PansiyonTransilvaniye.Models.Odalar>


<div class="carousel-room owl-carousel">
    @foreach (var item in Model)
    {
        <div class="item">
            <div class="room-wrap">
                <a href="#" class="room-img">
                    @if (item.OdaResimleri != null)
                    {
                        var base64 = Convert.ToBase64String(item.OdaResimleri);
                        var src = string.Format("data:image/gif;base64,{0}", base64);
                        <img src="@src">
                    }
                </a>
                <div class="text p-4">
                    <div class="d-flex mb-1">
                        <div class="one-third">
                            <h3><a href="#">@Html.Raw(item.OdaAdi)</a></h3>
                        </div>
                        <div class="one-forth text-center">
                            <p class="price">@Html.Raw(item.OdaUcreti) Tl  <br><span>/gece</span></p>
                        </div>
                    </div>
                    <p class="features">
                        <span class="d-block mb-2"><i class="icon-check mr-2"></i> @Html.Raw(item.OdaOzellikleri)</span>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

