@model IEnumerable<PansiyonTransilvaniye.Models.Services>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

@{
    ViewBag.Title = "AnaSayfaServislerAdi";

}



<section class="services bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-4 ftco-animate py-5 nav-link-wrap aside-stretch">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link px-4 active" id="v-pills-master-tab" data-toggle="pill" href="#v-pills-master" role="tab" aria-controls="v-pills-master" aria-selected="true"><span class="mr-3 flaticon-receptionist"></span> Tüm Servisler</a>
                    @foreach (var item in Model)
                    {
                        <a class="nav-link px-4" id="v-pills-buffet-tab" data-toggle="pill" href="#@Html.Raw(item.Id)" role="tab" aria-controls="@Html.Raw(item.Id)" aria-selected="false"><span class="material-icons">&#xe163;</span> @Html.Raw(item.ServiceAdi)</a>
                    }
                </div>
            </div>
            <div class="col-md-8 ftco-animate p-4 p-md-5 d-flex align-items-center">
                <div class="tab-content pl-md-5" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-master" role="tabpanel" aria-labelledby="v-pills-master-tab">
                        <span class="icon mb-3 d-block flaticon-receptionist"></span>
                        <h2 class="mb-4">Servisler Bölümü</h2>

                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="tab-pane fade" id="@Html.Raw(item.Id)" role="tabpanel" aria-labelledby="v-pills-buffet-tab">
                            <h2 class="mb-4">@Html.Raw(item.ServiceAdi)</h2>
                            <p class="lead">@Html.Raw(item.ServiceOzellik)</p>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</section>
}

